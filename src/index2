const express = require('express')
const collection = require("./mongodb")
const app = express()
const path = require("path")
const hbs = require("hbs")
const ejs = require("ejs")
const async = require('hbs/lib/async')
const tempelatePath=path.join(__dirname,'../tempelate')
const nodemailer = require('nodemailer')
const bodyParser = require('body-parser');


app.use(express.static('./public'))
app.use(express.json())
app.set("view engine","ejs")
app.set("views", tempelatePath)
app.use(express.urlencoded({extended:false}))


app.get ("/",(req,res)=>{
    res.render("login")
})
app.get ("/signup",(req,res)=>{
    res.render("signup")
})
app.get ("/ForgotPassword",(req,res)=>{
    res.render("ForgotPassword")
})

 app.post("/signup",async(req,res)=>{

    const data={
        username:req.body.username,
        email:req.body.email,
        password:req.body.password,

    }
    await collection.insertMany([data])
    
    res.render("EventPage")
 })
 app.post("/signup",async(req,res)=>{

    const data={
        username:req.body.username,
        email:req.body.email,
        password:req.body.password,

    }
    await collection.insertMany([data])
    
    res.render("EventPage")
 })
 app.post('/login', async (req, res) => {
    try {
        const check=await collection.findOne({ username:req.body.username })
		console.log(check.password)
        if (check.password === req.body.password) {
            res.render("EventPage")
        }
        else {
            res.send("incorrect password<a href=/>Sign in</a>")
        }
    } 
    catch (e) {
        res.send("wrong details<a href=/>Sign in</a>")
    }
   
})


app.post("/ForgotPassword", async (req, res) => {
    try {
		const checkEmail = await collection.findOne({ email: req.body.email })
		const passing = checkEmail.password
		const sendMail = checkEmail.email

		console.log(sendMail)
		if (checkEmail.email === req.body.email) {		
			const transporter = nodemailer.createTransport({
				service: 'gmail',
				auth: {
				user: 'azzoz2001@gmail.com',
				pass: 'zjklimnjqfawmynm'
				}
			});
			const mailOptions = {
				from: 'azzoz2001@gmail.com',
				to: sendMail,
				subject: 'Forgot password',
				text:"your password is "+ passing
			};
			transporter.sendMail(mailOptions, function(error, info){
				if (error) {
				console.log(error);
				} else {
				console.log('Email sent: ' + info.response);
				}
			});
			res.render("login")
		}
		else{
			res.send("wrong email<a href=/ForgotPassword> Forgot password</a>")
		}
	}
	catch (e) {
        res.send("wrong details<a href=/>Sign in</a>")
    }
});



app.listen(3000,()=> {
    console.log('connected');
})

